@using ZooShop.Core.Models

@model List<ZooShop.Infrastructure.Data.Models.Product>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добре дошли в магазин #1 за вашите любимци</h1>
    
</div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var product = Model[i];
              <!-- Използваме Model, защото списъкът идва от контролера -->
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block mx-auto" style="max-width: 500px; max-height: 500px;"
                         src="@product.ImageUrl" alt="@product.Name">  <!-- Изображение на продукта -->
                    <div class="carousel-caption d-none d-md-block">
                        <h5>
                            <a class="btn btn-primary add-to-cart" data-product-id="@product.Id" href="@Url.Action("AddToCart", "Cart", new { productId = product.Id })">
                                Добави в количката - @product.Price лв.
                            </a>
                        </h5>
                    </div>
                </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
